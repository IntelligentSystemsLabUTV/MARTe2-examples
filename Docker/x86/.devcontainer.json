{
    // MARTe2 environment
    "name": "marte2-examples",
    "dockerComposeFile": [
        "docker-compose.yml"
    ],
    // Only start this service
    "service": "marte2-examples",
    "runServices": [
        "marte2-examples"
    ],
    // Stop container if VS Code is shut down
    "shutdownAction": "stopCompose",
    // Extensions
    "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools",
        "twxs.cmake",
        "ms-vscode.cmake-tools",
        "yzhang.markdown-all-in-one",
        "gruntfuggly.todo-tree",
        "eamodio.gitlens",
        "davidanson.vscode-markdownlint",
        "dotjoshjohnson.xml",
        "timonwong.shellcheck",
        "aaron-bond.better-comments",
        "jeff-hykin.better-syntax",
        "donjayamanne.githistory",
        "shaharkazaz.git-merger",
        "basdp.language-gas-x86",
        "zachflower.uncrustify",
        "tomoki1207.pdf",
        "13xforever.language-x86-64-assembly",
        "redhat.vscode-yaml",
        "dan-c-underwood.arm",
        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag",
        "coolbear.systemd-unit-file",
        "shardulm94.trailing-spaces"
    ],
    // Settings
    "settings": {
        // Zsh
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
            "zsh": {
                "path": "/bin/zsh"
            },
        }
    },
    // Start the VS Code instance in the container's workspace
    "workspaceFolder": "/home/marte2/workspace",
    // Creates a sleeping process that VSC uses to stop the container
    "overrideCommand": true
}